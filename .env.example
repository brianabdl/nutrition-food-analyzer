# Application Environment Configuration
# Copy this file to .env and customize for your environment

# Application
APP_NAME="Food Nutrition Analyzer"
APP_ENV=development
APP_DEBUG=true

# Database
DB_TYPE=sqlite
DB_PATH=/var/www/html/data/nutrition.db

# Cache
CACHE_ENABLED=true
CACHE_DURATION=3600
CACHE_PATH=/var/www/html/cache

# PHP Settings
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=10M
PHP_POST_MAX_SIZE=10M
PHP_MAX_EXECUTION_TIME=300

# Server
SERVER_PORT=8080

# Pagination
ITEMS_PER_PAGE=10
MAX_COMPARISON_ITEMS=5

# Timezone
TZ=Asia/Jakarta
